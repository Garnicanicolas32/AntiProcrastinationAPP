<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <View
        android:id="@+id/spaceTop"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/spaceTag"
        android:layout_width="match_parent"
        android:layout_height="15dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/spaceBot"
        android:layout_width="match_parent"
        android:layout_height="18dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backLast" />

    <View
        android:id="@+id/spaceBotBoth"
        android:layout_width="match_parent"
        android:layout_height="18dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backBoth" />

    <View
        android:id="@+id/backFirst"
        android:layout_width="350dp"
        android:layout_height="115dp"

        android:background="@drawable/yy_rounded_top"
        android:backgroundTint="#91FF9C"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spaceTop" />

    <View
        android:id="@+id/backLast"
        android:layout_width="350dp"
        android:layout_height="110dp"

        android:background="@drawable/yy_rounded_bottom"
        android:backgroundTint="#FF9191"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spaceTop" />

    <View
        android:id="@+id/backBoth"
        android:layout_width="350dp"
        android:layout_height="120dp"

        android:background="@drawable/general_rounded"
        android:backgroundTint="#C20BF4"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spaceTop" />

    <View
        android:id="@+id/backMiddle"
        android:layout_width="350dp"
        android:layout_height="115dp"

        android:background="#A591FF"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spaceTop" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="310dp"

        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:autoSizeTextType="uniform"

        android:background="@drawable/btn_reward"
        android:elevation="2dp"
        android:gravity="center"
        android:maxLines="1"
        android:shadowColor="#2E231F"
        android:shadowDx="-2"
        android:shadowDy="1.5"
        android:shadowRadius="3"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTag"
        tools:text="Hacer ejercicio" />


    <ImageView
        android:id="@+id/btnDelete"

        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/btn_points"
        android:backgroundTint="#E1E1E1"
        android:contentDescription="TODO"

        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtName"
        app:layout_constraintTop_toTopOf="@+id/txtName"
        app:srcCompat="@drawable/zz_icon_delete"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/btnEdit"

        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/btn_points"
        android:backgroundTint="#E1E1E1"
        android:elevation="2dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/txtName"
        app:layout_constraintTop_toTopOf="@+id/txtName"
        app:srcCompat="@drawable/zz_icon_pencil" />

    <TextView
        android:id="@+id/btnPoints"

        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/btn_points"
        android:backgroundTint="#E1E1E1"
        android:elevation="2dp"
        android:gravity="center"
        android:maxLines="1"
        android:shadowColor="#000000"
        android:shadowDx="-2"
        android:shadowDy="1.5"
        android:shadowRadius="2"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:visibility="gone"

        app:layout_constraintStart_toEndOf="@+id/txtName"
        app:layout_constraintTop_toTopOf="@+id/txtName"
        tools:text="+100" />

    <TextView
        android:id="@+id/txtTag"

        android:layout_width="170dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_points"
        android:elevation="2dp"
        android:gravity="center"
        android:shadowColor="#2E231F"
        android:shadowDx="-2"
        android:shadowDy="1.5"
        android:shadowRadius="3"
        android:textColor="#DADADA"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spaceTag"
        tools:ignore="TextContrastCheck"
        tools:text="tag" />

    <TextView
        android:id="@+id/txtUsos"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/general_rounded_outline"
        android:elevation="3dp"
        android:gravity="center"
        android:maxLines="1"
        android:shadowColor="#2E231F"
        android:shadowDx="-2"
        android:shadowDy="1.5"
        android:shadowRadius="3"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtName"
        app:layout_constraintStart_toStartOf="@+id/txtName"
        app:layout_constraintTop_toBottomOf="@+id/txtName"
        tools:text="5 usos" />

</androidx.constraintlayout.widget.ConstraintLayout>