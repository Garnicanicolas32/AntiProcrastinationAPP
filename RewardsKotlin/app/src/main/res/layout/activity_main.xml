<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/txtPoints"
            android:layout_width="83dp"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/rounded_corner"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="puntos" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listOfRewards"
            android:layout_width="match_parent"
            android:layout_height="495dp"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/btnRemoveUsage"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/btnListActivities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:text="@string/activities"
            app:layout_constraintStart_toEndOf="@+id/txtPoints"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnListRewards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:text="@string/rewards"
            app:layout_constraintStart_toEndOf="@+id/btnListActivities"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnCreateReward"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#94cf1f"
            android:text="@string/addPLUS"
            android:textColor="#0D47A1"
            app:layout_constraintStart_toEndOf="@+id/btnListRewards"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/btnDeleteAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/delete_all"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.395"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnListActivities" />

        <Button
            android:id="@+id/btnRemoveUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="@string/usage"
            app:layout_constraintStart_toEndOf="@+id/btnDeleteAll"
            app:layout_constraintTop_toBottomOf="@+id/btnListActivities" />

        <Button
            android:id="@+id/btnDebugAnything"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="debug"
            app:layout_constraintStart_toEndOf="@+id/btnRemoveUsage"
            app:layout_constraintTop_toBottomOf="@+id/btnListActivities" />

        <Spinner
            android:id="@+id/spinnerSort"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:entries="@array/ordenar"
            android:minHeight="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDeleteAll">

        </Spinner>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
